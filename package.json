    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "bunx ultracite lint",
    "format": "bunx ultracite format",
    "check-types": "turbo run check-types",
    "clean:all": "bunx rimraf --no-glob .turbo node_modules bun.lockb",
    "clean:install": "bun clean:all && bun install",
    "sync:env": "./scripts/sync-env.sh",
    "db:generate": "cd packages/database && bun db:generate",
    "db:migrate": "cd packages/database && bun db:migrate",
    "db:studio": "cd packages/database && bun db:studio",
    "prepare": "husky"
  },
