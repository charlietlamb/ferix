{
  "name": "ferix",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "sync:env": "./scripts/sync-env.sh",
    "db:generate": "cd packages/database && bun db:generate",
    "db:migrate": "cd packages/database && bun db:migrate",
    "db:studio": "cd packages/database && bun db:studio"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.29",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "install": "^0.13.0",
    "next-intl": "^4.3.4"
  }
}
