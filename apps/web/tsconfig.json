{
  "extends": "@ferix/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@ferix/api/*": ["../../apps/api/src/*"],
      "@ferix/ui/*": ["../../packages/ui/src/*"],
      "@ferix/env": ["../../packages/env/src"],
      "@ferix/database/*": ["../../packages/database/src/*"],
      "@ferix/i18n/*": ["../../packages/i18n/src/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
