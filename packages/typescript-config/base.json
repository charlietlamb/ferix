{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "module": "es2022",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@ferix/ui/*": ["../../packages/ui/src/*"],
      "@ferix/env": ["../../packages/env/src"],
      "@ferix/i18n/*": ["../../packages/i18n/src/*"],
      "@ferix/types/*": ["../../packages/types/src/*"],
      "@ferix/notifications/*": ["../../packages/notifications/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
